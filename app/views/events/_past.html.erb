<% if @past_events.any? %>
  <div class="tab_table">
    <%= table_for(@past_events) do |t| %>
      <%= t.body do |event| %>
        <%= t.r do %>
          <%= t.d(h(event.created_at.to_s(:day_week_month))) %>
          <%= t.d(h(event.name)) %>
          <%= t.d(h(event.venue.name)) %>
          <%= t.d(h(event.start_time.to_s(:time_day)+"-"+event.end_time.to_s(:time_day))) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= will_paginate @past_events, :page_links => false, :param_name => "upcoming_page" %>
<% else %>
  <p>You haven't attended any events.</p>
<% end %>
